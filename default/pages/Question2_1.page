<apex:page standardController="Contact" extensions="Question2_extension">
  
<apex:form >
    <apex:pageBlock >

            <apex:pageBlockSection title="--------------------------Contact and Properties-----------------------------" columns="1">

                <apex:pageBlockTable value="{!con}" var="a">

                    <apex:column value="{!a.firstname}"/>
                    <apex:column value="{!a.lastname}"/>
                    <apex:column value="{!a.phone}"/>

                </apex:pageBlockTable>

                <apex:pageBlockTable value="{!prop}" var="a">

                    <apex:column value="{!a.Account__c}"/>
                    <apex:column value="{!a.Name}"/>

                </apex:pageBlockTable>

            </apex:pageBlockSection>

    </apex:pageBlock>
</apex:form>
</apex:page>